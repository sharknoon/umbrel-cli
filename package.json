{
  "name": "umbrel-cli",
  "version": "0.2.2",
  "description": "A small cli tool to help you create and maintain your umbrel apps",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "umbrel-cli": "dist/cli.js",
    "umbrel": "dist/cli.js"
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "dev": "npm run build && node dist/cli.js",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "test": "vitest run",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "schema": "json2ts \"src/schemas/*.json\" src/schemas"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sharknoon/umbrel-cli.git"
  },
  "keywords": [
    "umbrel",
    "apps",
    "app store"
  ],
  "author": "Josua Frank <frank.josua@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sharknoon/umbrel-cli/issues"
  },
  "homepage": "https://github.com/sharknoon/umbrel-cli#readme",
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.12.8",
    "@types/semver": "^7.5.8",
    "@types/ssh2-sftp-client": "^9.0.3",
    "@types/yargs": "^17.0.32",
    "eslint": "^8.57.0",
    "globals": "^15.3.0",
    "json-schema-to-typescript": "^14.0.4",
    "rollup": "^4.18.0",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "ajv": "^8.13.0",
    "ajv-formats": "^3.0.1",
    "handlebars": "^4.7.8",
    "isomorphic-git": "^1.25.8",
    "latest-version": "^9.0.0",
    "open": "^10.1.0",
    "semver": "^7.6.2",
    "ssh2": "^1.15.0",
    "ssh2-sftp-client": "^10.0.3",
    "yaml": "^2.4.2",
    "yargs": "^17.7.2",
    "zod": "^3.23.6"
  }
}
