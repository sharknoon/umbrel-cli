{
  "name": "umbrel-cli",
  "version": "0.5.0",
  "description": "A small cli tool to help you create and maintain your umbrel apps",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "umbrel-cli": "dist/cli.js",
    "umbrel": "dist/cli.js"
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "dev": "npm run build && node dist/cli.js",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "test": "vitest run",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "lint": "prettier . --check && eslint .",
    "format": "prettier . --write",
    "prepublishOnly": "npm run build",
    "schema": "json2ts \"src/schemas/*.json\" src/schemas",
    "prepare": "npm run schema"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sharknoon/umbrel-cli.git"
  },
  "keywords": [
    "umbrel",
    "apps",
    "app store"
  ],
  "author": "Josua Frank <frank.josua@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sharknoon/umbrel-cli/issues"
  },
  "homepage": "https://github.com/sharknoon/umbrel-cli#readme",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.9.0",
    "@types/semver": "^7.5.8",
    "@types/ssh2-sftp-client": "^9.0.4",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^2.1.5",
    "@vitest/ui": "^2.1.5",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "json-schema-to-typescript": "^15.0.3",
    "prettier": "^3.3.3",
    "rollup": "^4.27.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "handlebars": "^4.7.8",
    "isomorphic-git": "^1.27.1",
    "latest-version": "^9.0.0",
    "open": "^10.1.0",
    "semver": "^7.6.3",
    "ssh2": "^1.16.0",
    "ssh2-sftp-client": "^11.0.0",
    "yaml": "^2.6.0",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  }
}
